<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.RegisterPage">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand" BackgroundColor="White">
            <Image Source="Intec.jpg" WidthRequest="180" HeightRequest="180"></Image>

            <Entry Placeholder="Username"/>
            <Entry x:Name="emailEntry" Placeholder="Email"/>
            <Entry Placeholder="Password" IsPassword="True"/>
            <Entry Placeholder="Confirm Password" IsPassword="True"/>

            <Button Text="Register" BackgroundColor="Red" TextColor="White"/>






        </StackLayout>
    </ContentPage.Content>
</ContentPage>