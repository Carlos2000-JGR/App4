<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.LoginUI"
             BackgroundColor="White">


    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">

            <Image Source="Intec.jpg" WidthRequest="180" HeightRequest="180"></Image>




            <Entry x:Name="Entry_Username" Placeholder="Username" />

            <Entry x:Name="Entry_Password" Placeholder="Password" IsPassword="True" />
            <Button x:Name="Btn_Signin" TextColor="White" BackgroundColor="Red" Text="Sign in" Clicked="Button_Clicked"/>


            <Label HorizontalOptions="Center">
                <Label.FormattedText>

                    <FormattedString>

                        <Span Text="Don't have an account? " TextColor="Gray"/>
                        <Span Text="Register" TextColor="Gray" FontAttributes="Bold" TextDecorations="Underline"/>

                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                </Label.GestureRecognizers>
             
            </Label>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>